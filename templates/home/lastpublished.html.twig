<section class="our-client section-padding best-selling">
    <div class="container">
        <div class="row justify-content-between">
            <div class="col-xl-5 col-lg-5 col-md-12">
                <!-- Section Title -->
                <div class="section-tittle mb-40">
                    <h2>Latest Published Items</h2>
                </div>
            </div>
            <div class="col-xl-7 col-lg-7 col-md-12">
                <div class="nav-button mb-40">
                    <!-- Nav Button -->
                    <nav>
                        <div class="nav nav-tabs" id="nav-tab" role="tablist">
                            {% for category, books in categories %}
                                <a class="nav-link {% if loop.first %}active{% endif %}" id="nav-{{ loop.index }}-tab"
                                   data-bs-toggle="tab" href="#nav-{{ loop.index }}" role="tab" 
                                   aria-controls="nav-{{ loop.index }}" 
                                   aria-selected="{{ loop.first ? 'true' : 'false' }}">
                                    {{ category }}
                                </a>
                            {% endfor %}
                        </div>
                    </nav>
                    <!-- End Nav Button -->
                </div>
            </div>
        </div>
    </div>

    <div class="container">
        <!-- Nav Card -->
        <div class="tab-content" id="nav-tabContent">
            {% for category, books in categories %}
                <div class="tab-pane fade {% if loop.first %}show active{% endif %}" id="nav-{{ loop.index }}" 
                     role="tabpanel" aria-labelledby="nav-{{ loop.index }}-tab">
                    <!-- Tab Content -->
                    <div class="row">
                        {% for book in books %}
                            <div class="col-xl-2 col-lg-3 col-md-4 col-sm-6">
                                <div class="properties pb-30">
                                    <div class="properties-card">
                                        <div class="properties-img">
                                            <a href="{{ path('app_livre_show', {'id': book.id}) }}">
                                                <img src="{{ asset('uploads/livres/' ~ book.image) }}" 
                                                     alt="{{ book.titre }}">
                                            </a>
                                        </div>
                                        <div class="properties-caption properties-caption2">
                                            <h3><a href="{{ path('app_livre_show', {'id': book.id}) }}">{{ book.titre }}</a></h3>
                                            <p>{{ book.auteurs|map(a => a.nom)|join(', ') }}</p>
                                            <div class="properties-footer d-flex justify-content-between align-items-center">
                                                <div class="review">
                                                    <div class="rating">
                                                        {% for i in 1..2 %}
                                                            <i class="fas fa-star"></i>
                                                        {% endfor %}
                                                    </div>
                                                    <p>(<span>1 Review)</p>
                                                </div>
                                                <div class="price">
                                                    <span>${{ book.prix }}</span>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        {% endfor %}
                    </div>
                </div>
            {% endfor %}
        </div>
    </div>
</section>
