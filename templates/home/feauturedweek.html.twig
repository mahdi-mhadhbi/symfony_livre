<div class="services-area2 top-padding">
    <div class="container">
        <div class="row">
            <div class="col-xl-9 col-lg-9 col-md-8">
                <div class="row">
                    <!-- Title -->
                    <div class="col-xl-12">
                        <div class="section-tittle d-flex justify-content-between align-items-center mb-40">
                            <h2 class="mb-0">Featured This Week</h2>
                            <a href="#" class="browse-btn">View All</a>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-xl-12">
                        <div class="services-active">
                            {% for livre in latests %}
                                <!-- Single -->
                                <div class="single-services d-flex align-items-center">
                                    <div class="features-img">
                                        {% if livre.image %}
                                            <img src="{{ asset('uploads/livres/' ~ livre.image) }}" alt="{{ livre.titre }}">
                                        {% else %}
                                            <img src="assets/img/gallery/default-book.jpg" alt="Default Cover">
                                        {% endif %}
                                    </div>
                                    <div class="features-caption">
                                        <h3>{{ livre.titre }}</h3>
                                        <p>By 
                                            {% for auteur in livre.auteurs %}
                                                {{ auteur.nom }} {{ auteur.prenom }}{% if not loop.last %}, {% endif %}
                                            {% endfor %}
                                        </p>
                                        <div class="price">
                                            <span>${{ livre.prix }}</span>
                                        </div>
                                        <a class="border-btn" href="{{ path('app_livre_show', {'id': livre.id}) }}">View Details</a>
                                        
                                    </div>
                                </div>
                            {% else %}
                                <p>No latest books available at the moment.</p>
                            {% endfor %}
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-xl-3 col-lg-3 col-md-4 col-sm-9">
                <!-- Google Ad -->
                <div class="google-add">
                    <img src="assets/img/gallery/ad.jpg" alt="" class="w-100">
                </div>
            </div>
        </div>
    </div>
</div>
