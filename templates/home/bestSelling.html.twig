<div class="best-selling section-bg">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-xl-7 col-lg-8">
                <div class="section-tittle text-center mb-55">
                    <h2>Best Selling Books Ever</h2>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-xl-12">
                <div class="selling-active">
                    {% for livre in livres %}
                    <!-- Single Book -->
                    <div class="properties pb-20">
                        <div class="properties-card">
                            <div class="properties-img">
                              <a href="{{ path('app_livre_show', {'id': livre.id}) }}"> <img src="{{ asset('uploads/livres/' ~ livre.image) }}" alt="{{ livre.titre }}"></a>
                                
                            </div>
                            <div class="properties-caption">
                                <p>{{ livre.auteurs|first }}</p><!-- Assuming 'auteur' is a relation in 'livre' -->
                                <div class="properties-footer d-flex justify-content-between align-items-center">
                                    <div class="review">
                                        <div class="rating">
                                            <!-- Assuming rating is available as a value -->
                                            {% for i in 1..5 %}
                                                <i class="fas fa-star"></i>
                                            {% endfor %}
                                        </div>
                                        <p>(<span>120</span> Review)</p>
                                    </div>
                                    <div class="price">
                                        <span>${{ livre.prix }}</span>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    {% else %}
                    <p>No best-selling books available at the moment.</p>
                    {% endfor %}
                </div>
            </div>
        </div>
    </div>
</div>
