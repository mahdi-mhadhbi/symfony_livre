{% extends 'base.html.twig' %}

{% block title %}New Categories{% endblock %}

{% block body %}
    <div class="container mt-5">
        <h1 class="mb-4">Create New Categories</h1>

        <div class="card">
            <div class="card-body">
                {{ form_start(form) }}
                
                <div class="form-group mb-3">
                    {{ form_label(form.designation, 'Designation') }}
                    {{ form_widget(form.designation, { 'attr': {'class': 'form-control'} }) }}
                    {{ form_errors(form.designation) }}
                </div>

                <div class="form-group mb-3">
                    {{ form_label(form.description, 'Description') }}
                    {{ form_widget(form.description, { 'attr': {'class': 'form-control'} }) }}
                    {{ form_errors(form.description) }}
                </div>

                <button type="submit" class="btn btn-success">Save</button>
                
                {{ form_end(form) }}
            </div>
        </div>

        <a href="{{ path('app_categories_index') }}" class="btn btn-secondary mt-3">Back to List</a>
        <br>
        <br>
        <br>
    </div>
{% endblock %}
