{% extends 'base.html.twig' %}

{% block title %}New Editeur{% endblock %}

{% block body %}
    <div class="container mt-5">
        <h1 class="mb-4">Create New Editeur</h1>

        <div class="card">
            <div class="card-body">
                {{ form_start(form) }}
                    <div class="form-group mb-3">
                        {{ form_label(form.nom, 'Name') }}
                        {{ form_widget(form.nom, { 'attr': {'class': 'form-control'} }) }}
                        {{ form_errors(form.nom) }}
                    </div>

                    <button type="submit" class="btn btn-success">Save</button>
                {{ form_end(form) }}
            </div>
        </div>


        <a href="{{ path('app_editeur_index') }}" class="btn btn-secondary mt-3">Back to List</a>
        <br>
          <br>
            <br>
    </div>
{% endblock %}
