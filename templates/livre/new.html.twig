{% extends 'base.html.twig' %}

{% block title %}New Livre{% endblock %}

{% block body %}
    <div class="container mt-5">
        <h1 class="mb-4">Create New Livre</h1>

        <div class="card">
            <div class="card-body">
                {{ form_start(form) }}
                
                <div class="form-group mb-3">
                    {{ form_label(form.titre, 'Title') }}
                    {{ form_widget(form.titre, { 'attr': {'class': 'form-control'} }) }}
                    {{ form_errors(form.titre) }}
                </div>

                <div class="form-group mb-3">
                    {{ form_label(form.nbrpage, 'Number of Pages') }}
                    {{ form_widget(form.nbrpage, { 'attr': {'class': 'form-control'} }) }}
                    {{ form_errors(form.nbrpage) }}
                </div>

                <div class="form-group mb-3">
                    {{ form_label(form.dateEdition, 'Edition Date') }}
                    {{ form_widget(form.dateEdition, { 'attr': {'class': 'form-control', 'placeholder': 'YYYY-MM-DD'} }) }}
                    {{ form_errors(form.dateEdition) }}
                </div>

                <div class="form-group mb-3">
                    {{ form_label(form.nbrexemplaire, 'Number of Copies') }}
                    {{ form_widget(form.nbrexemplaire, { 'attr': {'class': 'form-control'} }) }}
                    {{ form_errors(form.nbrexemplaire) }}
                </div>

                <div class="form-group mb-3">
                    {{ form_label(form.prix, 'Price') }}
                    {{ form_widget(form.prix, { 'attr': {'class': 'form-control'} }) }}
                    {{ form_errors(form.prix) }}
                </div>

                <div class="form-group mb-3">
                    {{ form_label(form.categories, 'Select Category') }}
                    {{ form_widget(form.categories, { 'attr': {'class': 'form-control'} }) }}
                    {{ form_errors(form.categories) }}
                </div>

                <div class="form-group mb-3">
                    {{ form_label(form.editeur, 'Select Editeur') }}
                    {{ form_widget(form.editeur, { 'attr': {'class': 'form-control'} }) }}
                    {{ form_errors(form.editeur) }}
                </div>

                <div class="form-group mb-3">
                    {{ form_label(form.auteurs, 'Select Auteurs') }}
                    {{ form_widget(form.auteurs, { 'attr': {'class': 'form-control select-multiple', 'multiple': 'multiple'} }) }}
                    {{ form_errors(form.auteurs) }}
                </div>

                <button type="submit" class="btn btn-success">Save</button>
                
                {{ form_end(form) }}
            </div>
        </div>

        <a href="{{ path('app_livre_index') }}" class="btn btn-secondary mt-3">Back to List</a>
        <br>
        <br>
        <br>
    </div>
{% endblock %}
